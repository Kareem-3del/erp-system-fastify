{
  "name": "erp-system",
  "version": "1.0.0",
  "description": "ERP System for managing your business with Fastify and TypeORM",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix --ext .ts .",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && node dist/index.js",
    "start:dev": "npx nodemon",
    "dev": "nodemon --watch './src/**/*.ts' --exec ts-node ./src/index.ts",
    "build": "tsc",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watchAll",
    "commit": "git cz"
  },
  "keywords": [
    "ERP",
    "Fastify",
    "Modules",
    "TypeORM",
    "PostgreSQL"
  ],
  "author": "Kareem-3del",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/static": "^6.11.2",
    "@fastify/swagger": "^8.10.0",
    "@fastify/swagger-ui": "^1.9.3",
    "bcrypt": "^5.1.1",
    "dotenv": "^8.2.0",
    "fastify": "^4.23.2",
    "fastify-oas": "^3.0.8",
    "fastify-plugin": "3.0.0",
    "nodemailer": "^6.9.5",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.14.37",
    "@types/nodemailer": "^6.4.10",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "git-cz": "^4.7.6",
    "jest": "^29.7.0",
    "jest-resolve": "^29.7.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
